citHeader("To cite the 'rostemplate' package in publications use:")

year = format(Sys.time(), "%Y")
vers = paste('R package version', meta$Version)
url = 'https://ropenspain.github.io/rostemplate/'
citEntry(
  entry = 'manual',
  title = paste('rostemplate:', meta$Title),
  author = "Diego Hernang√≥mez",
  year = year,
  note = vers,
  url = url,
  textVersion = paste0('Hernangomez, D. (', year, '). rostemplate: ', meta$Title, '. ', vers, '. Package url: ', url)
)
